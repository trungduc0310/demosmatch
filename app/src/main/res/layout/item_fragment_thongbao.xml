<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_itemthongbao_img"
        android:src="@drawable/ic_notifications_black_24dp"
        />
        <LinearLayout
            android:layout_toLeftOf="@id/tv_itemthongbao_thoigian"
            android:layout_toRightOf="@id/img_itemthongbao_img"
            android:id="@+id/linear_noidung"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">
            <TextView
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#1F1C1C"
                android:textSize="16sp"
                android:text="Tiêu đề thông báo"
                android:id="@+id/tv_itemthongbao_title"
                />
            <TextView
                android:paddingBottom="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nội dung thông báo"
                android:textColor="#2C2525"
                android:id="@+id/tv_itemthongbao_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_itemthongbao_thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="11sp"
            android:text="Thời gian"/>
    </RelativeLayout>
