<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8EDF7"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_itemthongbao_img"
        android:src="@drawable/ic_notifications_black_24dp"
        />
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#1F1C1C"
            android:textSize="16sp"
            android:text="Tiêu đề thông báo"
            android:id="@+id/tv_itemthongbao_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nội dung thông báo"
            android:textColor="#2C2525"
            android:id="@+id/tv_itemthongbao_content"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>