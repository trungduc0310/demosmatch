<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ccffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin sân bóng"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/img_1"
                    android:layout_marginRight="7dp"
                    android:id="@+id/img_thongtinsanbong_hinhanh1"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <ImageView
                    android:src="@drawable/img_2"
                    android:id="@+id/img_thongtinsanbong_hinhanh2"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sân: Thiên Trường 1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_thongtinsanbong_tensan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại sân: sân 7"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_thongtinsanbong_loaisan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá: "
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/rating_thongtinsanbong_danhgia"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3"
                    />
            </LinearLayout>
            <View
                android:layout_margin="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#CD737373"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên chủ sân: Nguyễn Văn A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_thongtinsanbong_tenchusan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ: Nam Định"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_thongtinsanbong_diachisan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại: 0966541248"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_thongtinsanbong_sodienthoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                >
                <Button
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liên hệ đặt sân ngay"
                    android:textColor="#ffffff"
                    android:id="@+id/btn_thongtinsanbong_lienhengay"
                    android:background="@drawable/btn_lienhengay"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>