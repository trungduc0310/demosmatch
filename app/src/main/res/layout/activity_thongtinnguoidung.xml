<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserDetailsActivity">

    <FrameLayout
        android:id="@+id/ln_thongtinnguoidung_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/_img_thongtinnguoidung_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_thongtinnguoidung_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_thongtinnguoidung_hinhanh"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tv_thongtinnguoidung_changeavt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edt_find"
                        android:padding="3dp"
                        android:text="Thay đổi ảnh đại diện" />
                </androidx.cardview.widget.CardView>



            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="@dimen/margintop"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/edt_thongtinnguoidung_content_ten"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_textview"
                    android:padding="10dp"
                    android:singleLine="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_thongtinnguoidung_title_ten"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_thongtinnguoidung_title_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tên người dùng: "
                    app:layout_constraintBottom_toBottomOf="@id/edt_thongtinnguoidung_content_ten"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edt_thongtinnguoidung_content_ten"
                    tools:ignore="MissingConstraints" />


                <EditText
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/edt_thongtinnguoidung_content_ten"
                    app:layout_constraintStart_toEndOf="@id/tv_thongtinnguoidung_title_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/edt_thongtinnguoidung_content_ten"
                    android:id="@+id/edt_thongtinnguoidung_content_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/background_textview"
                    android:focusable="false"
                    android:padding="10dp"
                    android:singleLine="true"
                    tools:ignore="MissingConstraints" />

                <TextView
                    app:layout_constraintTop_toTopOf="@id/edt_thongtinnguoidung_content_email"
                    app:layout_constraintBottom_toBottomOf="@id/edt_thongtinnguoidung_content_email"
                    android:id="@+id/tv_thongtinnguoidung_title_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email: "
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:layout_marginTop="@dimen/margintop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/edt_thongtinnguoidung_content_ten"
                    app:layout_constraintStart_toEndOf="@id/tv_thongtinnguoidung_title_diachi"
                    app:layout_constraintTop_toBottomOf="@id/edt_thongtinnguoidung_content_email"
                    android:id="@+id/edt_thongtinnguoidung_content_diachi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/background_textview"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    app:layout_constraintTop_toTopOf="@id/edt_thongtinnguoidung_content_diachi"
                    app:layout_constraintBottom_toBottomOf="@id/edt_thongtinnguoidung_content_diachi"
                    android:id="@+id/tv_thongtinnguoidung_title_diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Địa chỉ: "
                    tools:ignore="MissingConstraints" />

                <RadioGroup
                    android:layout_marginTop="@dimen/margintop"
                    app:layout_constraintTop_toBottomOf="@id/edt_thongtinnguoidung_content_diachi"
                    app:layout_constraintStart_toStartOf="@id/edt_thongtinnguoidung_content_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radiogr"
                    tools:ignore="MissingConstraints">

                    <RadioButton
                        android:id="@+id/radio_thongtinnguoidung_nam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/radio_thongtinnguoidung_nu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nữ" />

                    <RadioButton
                        android:id="@+id/radio_thongtinnguoidung_khac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Khác" />
                </RadioGroup>

                <TextView
                    app:layout_constraintTop_toTopOf="@id/radiogr"
                    app:layout_constraintBottom_toBottomOf="@id/radiogr"
                    android:id="@+id/tv_thongtinnguoidung_title_gioitinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Giới tính: "
                    tools:ignore="MissingConstraints" />


                <CalendarView
                    app:layout_constraintTop_toBottomOf="@id/edt_thongtinnguoidung_ngaysinh"
                    android:id="@+id/cld_thongtinnguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"></CalendarView>


                <EditText
                    android:layout_marginTop="@dimen/margintop"
                    app:layout_constraintStart_toStartOf="@id/edt_thongtinnguoidung_content_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radiogr"
                    android:id="@+id/edt_thongtinnguoidung_ngaysinh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    tools:ignore="MissingConstraints" />

                <TextView
                    app:layout_constraintTop_toTopOf="@id/edt_thongtinnguoidung_ngaysinh"
                    app:layout_constraintBottom_toBottomOf="@id/edt_thongtinnguoidung_ngaysinh"
                    android:id="@+id/tv_thongtinnguoidung_title_ngaysinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh: "
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btn_thongtinnguoidung_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_dangky"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/margintop"
                    android:layout_marginBottom="@dimen/margintop"
                    android:padding="10dp"
                    android:text="Lưu thông tin"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progress_thongtinnguoidung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>