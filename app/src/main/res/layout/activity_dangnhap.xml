<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Dangnhap"
    android:background="#c7fdff"
    android:padding="15dp"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"

        android:src="@drawable/ic_launcher_background"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/edt_dangnhap_email"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:id="@+id/edt_dangnhap_matkhau"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btn_dangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_gravity="center"
        android:background="@drawable/btn_dangnhap"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7b848d"
        android:text="Bạn chưa có tài khoản"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký ngay"
        android:textColor="#000eda"
        android:layout_gravity="center"
        android:id="@+id/tv_dangky"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập với"
                android:layout_margin="10dp"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:src="@drawable/facebook_icon"
                android:id="@+id/imgbtn_facebook"
                />
        </LinearLayout>


    </RelativeLayout>



</LinearLayout>