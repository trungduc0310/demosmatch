<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#B9F7DE"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/itempageuser_avt"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="serif"
            android:text="User name 1"
            android:id="@+id/itempageuser_tv_username"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="10-11-2019"
            android:id="@+id/itempageuser_tv_ngaythang"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Tiêu đề bài biết"
            android:id="@+id/itempageuser_tv_tieudebv"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#59D87C"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:text="Nội dung bài viết"
            android:id="@+id/itempageuser_tv_noidungbv"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình luận"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:background="@drawable/btn_binhluan"
            android:id="@+id/itempageuser_btn_binhluan"/>
        <Button
            android:layout_weight="3"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng lại"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:background="@drawable/btn_binhluan"
            android:id="@+id/itempageuser_btn_dangtiep"/>
    </LinearLayout>


</LinearLayout>