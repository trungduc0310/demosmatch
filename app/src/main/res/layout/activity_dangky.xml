<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ece6e6">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/_img_dangky_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_margin="10dp"/>
    </FrameLayout>
    <ScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comicsan"
                    android:layout_gravity="center"
                    android:text="Đăng ký"
                    android:textColor="#00cccb"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_image_black_24dp"
                    android:id="@+id/img_dangky_avt"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="3dp"
                    android:padding="3dp"
                    android:background="#dfdfdf"
                    android:id="@+id/tv_dangky_chonanhdaidien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ảnh đại diện" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comicsan"
                android:text="* Vui lòng điền đầy đủ thông tin:">
            </TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng (*):"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:fontFamily="@font/comicsan"
                    android:textColor="#000000">

                </TextView>
                <EditText
                    android:layout_marginTop="@dimen/smallmargin"
                    android:padding="10dp"
                    android:background="@drawable/background_textview"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:singleLine="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_dangky_tennguoidung"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email (*):"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:fontFamily="@font/comicsan"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:layout_marginTop="@dimen/smallmargin"
                    android:padding="10dp"
                    android:background="@drawable/background_textview"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:singleLine="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_dangky_email"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu (*):"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:fontFamily="@font/comicsan"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:layout_marginTop="@dimen/smallmargin"
                    android:padding="10dp"
                    android:background="@drawable/background_textview"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_dangky_matkhau"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập lại mật khẩu (*):"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:fontFamily="@font/comicsan"
                    android:textColor="#000000">
                </TextView>
                <EditText
                    android:layout_marginTop="@dimen/smallmargin"
                    android:padding="10dp"
                    android:background="@drawable/background_textview"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_dangky_nhaplaimatkhau"/>
                <CheckBox
                    android:id="@+id/cb_dangky_showpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiện mật khẩu"
                    android:textSize="17sp"
                    android:textColor="#00cccb"
                    android:fontFamily="@font/comicsan">
                </CheckBox>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/progress_dangky"/>
                <Button
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    android:id="@+id/btn_dangky_dangky"
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_dangky"
                    android:fontFamily="@font/comicsan"
                    android:text="Đăng ký"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>